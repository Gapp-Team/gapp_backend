{
    "openapi": "3.0.0",
    "info": {
      "title": "Node.js API",
      "version": "3.1.0",
      "description": "Node.js API Documentation"
    },
    "servers": [
      {
        "url": "http://localhost:3000",
        "description": "Local Development Server"
      }
    ],
    "paths": {
      "/api/categories": {
        "get": {
          "summary": "Get all categories",
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Categories successfully retrieved",
                    "categories": []
                  }
                }
              }
            }
          }
        },
        "post": {
          "summary": "Create a new category",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "example": {
                  "name": "New Category"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Category successfully created",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Category successfully created",
                    "category": {
                      "_id": "123",
                      "name": "New Category"
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request"
            }
          }
        }
      },
      "/api/categories/{id}": {
        "get": {
          "summary": "Get category by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Category successfully retrieved",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Category successfully retrieved",
                    "category": {
                      "_id": "123",
                      "name": "Category Name"
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Category not found"
            }
          }
        },
        "put": {
          "summary": "Update category by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "example": {
                  "name": "Updated Category Name"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Category successfully updated",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Category successfully updated",
                    "category": {
                      "_id": "123",
                      "name": "Updated Category Name"
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request"
            },
            "404": {
              "description": "Category not found"
            }
          }
        },
        "delete": {
          "summary": "Delete category by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Category successfully deleted",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Category successfully deleted",
                    "deletedCategory": {
                      "_id": "123",
                      "name": "Deleted Category Name"
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Category not found"
            }
          }
        }
      }
      
    }
  }
  